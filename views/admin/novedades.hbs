<div class="container">
    <div class="row">
        {{!-- Fila 1 --}}
        <div class="col">
            <p class="text-end">hola {{usuario}}! suscipit possimus libero? 
            <a href="/admin/login/logout" class="btn btn-danger" href="">cerrar session <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>

    {{!-- Fila 2 --}}

    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>

        </div>
        <div class="col-5 text-end" >
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i></a>
            

        </div>
    </div>

    {{!-- Fila 3 --}}
    <div class="row">
        <div class="col">
      <!-- On tables -->
<table class="table">
  <thead>
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-end">Acciones</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each novedades}}
    <tr>
        <th scope="row">{{id}}</th>
        <td>{{Titulo}}</td>
        {{!-- {{#if imagen}} --}}
          <td>{{{imagen}}}</td>
        {{!-- {{/if}} --}}
      <td class="text-end">
        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a> {{!-- Modificar --}}

        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash-alt"></i></a> {{!-- Borrar --}}

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

        </div>

    </div>


</div>